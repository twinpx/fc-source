block vars
  - var page = 'main'
  - var authorized = false

extends ../../layouts/header.jade

block title
  title Main page | food
  
block content
  
  .container
  
    hr
      
    h1 Foodclub.ru — кулинарное сообщество
    
    hr
    
    include ../../components/recipe-search-index/template
    
    hr.i-size-L
    
    -var heading = "Свежий видеорецепт"
    include ../../modules/heading-linethrough/include
    
    iframe(width="100%" height="500" src="https://www.youtube.com/embed/1j6eHN_y2Vs" frameborder="0" allow="autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen="" loading="lazy")
    
    //-
      hr.i-size-L
    
      include ../../modules/index-brief/include
    
    hr.i-size-L
    
    .b-recipe-line.b-ph-block

      -var heading = "Последняя рекомендация"
      include ../../modules/heading-linethrough/include
      
      hr.i-size-L
      
      .row
        -var n = 0
          while n < 3
            -n++
            .col-sm-4
              include ../../modules/recipe-thumb/journal-item-short.jade
            hr.i-size-L.visible-xs-block
    
    hr.i-size-L
    
    -var heading = "Отзывы к рецептам"
    include ../../modules/heading-linethrough/include
    
    include ../../components/last-comments/template
    
    hr.i-size-L
    