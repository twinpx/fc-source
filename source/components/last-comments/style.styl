@import '../../styl/component-include.styl'

.b-last-comments
  padding-left 95px
  
  .b-placeholder-load
    display block !important

  &__item
    display none
    position relative
    width 50%
    height 210px
    color #484848
    line-height 20px
    margin 0 auto
    
    &:nth-of-type(1)
      display block
     
  &__userpic
    position absolute
    top 23px
    left -95px
    width 64px
    height 64px
    border-radius 51%
    background-repeat no-repeat
    background-position center
    background-size cover
    
  &__content
    box-shadow( 0 0 30px rgba(0,0,0,0.05) )
    background-color #fff
    padding 30px
    height 210px
    
  &__author
    font-weight bold
    margin-bottom 25px
    
  &__text
    margin-bottom 25px
    
  &__info
    font-size 8pt
    position absolute
    bottom 30px
    left 30px
    width 100%
    
  @media( max-width: 767px )
    padding-left 49px
    padding-top 30px
      
    &__item
      width 100%
      height 180px
      
    &__userpic
      top -7px
      left -49px
      width 36px
      height 36px
      
    &__content
      box-shadow(none)
      padding 0
      
    &__info
      left 0    