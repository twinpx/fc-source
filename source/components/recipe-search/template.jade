          a.title-search-result__item( href="" )
            span.title-search-result__img( style="background-image: url( '/upload/recipe/choco.jpg' );" )
            span.title-search-result__text
              span.title-search-result__header Лагман по-арабски
              span.title-search-result__info 1 час 32 минуты, 4 порции, 400 кКал
              
          a.title-search-result__item( href="" )
            span.title-search-result__img( style="background-image: url( '/upload/recipe/stage.jpg' );" )
            span.title-search-result__text
              span.title-search-result__header Тыква, запеченная со специями
              span.title-search-result__info 1 час 32 минуты, 4 порции, 400 кКал
        
        .title-search-result__block
      
          .title-search-result__title Записи
        
          a.title-search-result__item( href="" )
            span.title-search-result__img( style="background-image: url( '/upload/recipe/ill.jpg' );" )
            span.title-search-result__text
              span.title-search-result__header Ледяная ваза для окрошки
              
          a.title-search-result__item( href="" )
            span.title-search-result__img( style="background-image: url( '/upload/recipe/ill.jpg' );" )
