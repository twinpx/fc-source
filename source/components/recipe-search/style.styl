@import '../../styl/component-include.styl'
    
#titleSearchHeaderResult.title-search-result
  
  div&:not(.b-recipe-search__ul1 )
    background-color #fff
    left 0 !important
    width 100% !important
    max-height 315px
    
    @media( max-width: 991px )
      max-height none
      position static !important
    
#titleSearchHeaderResult .title-search-result
    
  table&:not(.b-recipe-search__ul1 )
    position static !important
    
  &__wrapper
    padding-left 15px
    height 315px
    
    @media( max-width: 991px )
      height auto
    
  &__block
    margin-bottom 22px
    
    &:first-child
      padding-top 25px
    
    &:last-child
      margin-bottom 0
  
  &__title
    color #484848
    font-size 7.5pt
    font-weight bold
    margin-bottom 14px
    
  &__item
    display flex
    justify-content left
    align-items center
    overflow hidden
    margin-bottom 12px
    
  &__img
    width 50px
    height 50px
    margin-right 20px
    background-position center
    background-repeat no-repeat
    background-size cover
    
  &__text
    display block
    
  &__header
    font-size 12pt
    display block
    
  &__info
    font-size 7pt
    color #484848
    display block
    margin-top -3px
    
#titleSearchHeaderResult a.title-search-result__item:hover
  text-decoration none

.b-recipe-search
  position relative
    
  &-field
    position absolute
    background #fff
    top 0
    left 0
    width 100%
    height 60px
    box-shadow(0 20px 20px rgba( 0,0,0,.05 ))
    z-index 10
    display none
    
    @media( max-width: 991px )
      position static
    
    .container
      position relative
      
    .i-mobile-search &
      display block
    
    &__icon
      width 16px
      height 16px
      background embedurl( 'img/search.svg' ) no-repeat center
      background-size cover
      position absolute
      top 22px
      left 15px
      z-index 11
    
    &__clear
      display none
      width 16px
      height 16px
      background embedurl( 'img/clear.svg' ) no-repeat center
      background-size cover
      cursor pointer
      position absolute
      top 22px
      right 15px
      z-index 11
      
      &:hover
        opacity .7
        
    &__input
      margin 18px 28px 0
        
    input
      border none
      background #fff
      height 22px
      display block
      width 100%
      font-size 12pt
      
      &:focus
        outline none
  
  &.i-search-page
    
    .b-recipe-search__form-field
      display block
      position static
    
    .b-recipe-search__input
      width 100% !important
      opacity(1)
      padding-left 12px !important
  
  &.i-open
    z-index 6
    
  span&__icon
    opacity .5
    cursor default
    pointer-events none
  
#titleSearchHeaderResult.title-search-result:not( .b-recipe-search__ul1 )
  position fixed !important
  top 120px !important
  width 100% !important
  background #fff
  z-index 11
  display none
  
#titleSearchHeaderResult.title-search-result.b-recipe-search__ul1
  margin 0 auto !important
  
  @media (min-width: 768px)
    width 740px !important
  @media (min-width: 992px)
    width 960px !important
  @media (min-width: 1200px)
    width 1090px !important