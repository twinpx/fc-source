#recipe_search_list
  position relative
  width 100px
  z-index 99

.b-rs

  &__heading
    background-color $light-grey
    border-top 1px solid #ffffff
    border-bottom 1px solid #ffffff
    padding 5px 10px 6px 10px
    margin-top -1px
    text-align center
    color $dark-grey
    font-weight bold
    
    &__num
      position relative
      display block
      
      &__content
        position absolute
        top 0
        right 10px
        display block
        font-size 8.5pt
        font-weight normal

  &__heading :first-child
    border-top none

  &__item
    padding 0
    
    &__link
      font-size $middle
      text-decoration none
      display block
      padding 1px 0 1px 0
      display block
      overflow hidden
      
    &__image
      display none
      
      &-wrapper
        float left
        width 50px
        height 50px
        overflow hidden
        margin-right 11px
        
        &__type_empty
          border 1px solid #e5e5e5
          
    &__text
      float left
      width 240px
      padding 18px 0 0
      display table-cell
      vertical-align middle
      line-height 1
      
    &__info
      float right
      width 90px
      
    &__time
      font-size $xx-small
      color $grey
      display block
      text-align right
      margin 10px 12px 2px 0
      white-space nowrap
      
    &__nutrition
      font-size $xx-small
      color $grey
      display block
      text-align right
      margin 0 12px 0 0
      
    &__hr
      display block
      font-size 0
      height 0
      padding 0
      margin 0 0 0 50px
      border-bottom 1px solid #eae1e1

  &__search-all
    background-color $light-grey
    border-top 1px solid #ffffff
    margin-top -1px
    padding 0

    &__link
      display block
      text-align center
      font-weight bold
      padding 18px 15px 17px
      font-size $middle

a.b-rs__search-all__link:hover,
.b-rs__search-all.i-hover .b-rs__search-all__link
  background-color $link-bg

a.b-rs__item__link:hover,
.b-rs__item.i-hover .b-rs__item__link
  background-color $link-bg
  color $link