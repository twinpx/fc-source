@import '../../styl/component-include.styl'

.i-mobile-search
  
  #recipe_search_list
    width auto
    
  .b-recipe-search__ul
    width 100%
    
  .b-rs__item__image-wrapper
    display none
    
  .b-rs__item__link
    padding 13px 20px 14px
    
  .b-rs__item__text
    width 70%
    padding-top 14px
    padding-bottom 14px
    
  .b-rs__item__info
    width 30%
    
  .b-rs__item__time
    margin-top 0
    
  .b-recipe-search__delete
    position absolute
    width 16px
    height 16px
    font-size 0
    background embedurl("img/delete.gif") no-repeat transparent
    cursor pointer
    top 27px
    right 27px
    //left 278px

.b-recipe-search
  rel()
  ib()
  margin -7px 0 0 38px
  z-index 4
  
  @media( max-width $screen-xs-max )
    display none
  
  &.i-search-page
    margin 0
    display block
    background $header-bg
    padding 20px
    
    .b-recipe-search__form-field
      display block
      position static
    
    .b-recipe-search__input
      width 100% !important
      opacity(1)
      padding-left 12px !important
  
  &.i-open
    z-index 6

  &__form-field
    ib()
    margin-bottom 0 !important
    position absolute
    top 0
    left -40px

  .b-form-field__placeholder__text
    font-size $big-size
    color $dark-grey
    line-height 32px
    padding-top 11px
    padding-left 11px
    width 273px !important

  &__delete
    position absolute
    width 21px
    height 21px
    font-size 0
    background url("data image/gifbase64,R0lGODlhFQAVAJECAP///bm5uf///wAAACH5BAEAAAIALAAAAAAVABUAAAIvVI6paesfAFwy1RndfVt1i30ZNiIiZ5JeqaYteEJXTK2kSLO2FvL3/ns5GsKAoAAAOw==") no-repeat
    cursor pointer
    top 16px
    right 27px
    //left 279px
    
    .i-preloader &
      display none !important
  

  &__input
    width 0 !important
    height 30px !important
    font-size $base-size
    padding 0 !important
    color #fff
    display block
    line-height 30px
    background $darker-grey
    border none
    box-shadow none
    opacity(0)
    trans( all 0.5s ease )
    
    /*.i-preloader &
      background-image url("/template/images/preloader-thin.gif")
      background-position right center
      background-repeat no-repeat*/
      
    .i-open &
      opacity(1)
      width 455px !important
      padding 2px 10px 2px 38px !important
      
      @media( max-width $screen-sm-max )
        width 380px !important
  

  &__icon
    ib()
    background embedurl( 'img/search.png' ) no-repeat center center
    width 22px
    height 22px
    padding 0
    border none
    cursor pointer
    position absolute
    top 4px
    right 9px
    
    .i-preloader &
      background-image url("/template/images/preloader-thin.gif")
      
  &__ul
    padding 1px
    list-style-type none
    position absolute
    top 0
    left 0
    z-index 60
    margin 0 !important
    display none
    background-color $light-grey
    font-size $middle
    width 455px
    z-index 100
    
    @media( max-width $screen-sm-max )
      width 380px

