@import '../../styl/component-include.styl'

.b-recipe-search
  float left
  padding 36px 57px 0 0

  &__form-field
    position relative
    height 52px
    width 315px
    float left
    margin-bottom 0 !important

  .b-form-field__placeholder__text
    font-size $big-size
    color $dark-grey
    line-height 32px
    padding-top 11px
    padding-left 11px
    width 273px !important

  &__delete
    position absolute
    width 21px
    height 21px
    font-size 0
    background url("data image/gifbase64,R0lGODlhFQAVAJECAP///bm5uf///wAAACH5BAEAAAIALAAAAAAVABUAAAIvVI6paesfAFwy1RndfVt1i30ZNiIiZ5JeqaYteEJXTK2kSLO2FvL3/ns5GsKAoAAAOw==") no-repeat
    cursor pointer
    top 16px
    left 279px
    
    .i-preloader &
      display none !important
  

  &__input
    width 257px !important
    height 47px !important
    font-size $big-size
    padding 2px 46px 1px 10px !important
    color $dark-grey
    display block
    line-height 35px
    box-sizing content-box
    -moz-box-sizing content-box
    -webkit-box-sizing content-box
    -khtml-box-sizing content-box
    
    .i-preloader &
      background-image url("/template/images/preloader-thin.gif")
      background-position 95% center
      background-repeat no-repeat
  

  &__button
    margin 0 0 0 11px
    padding 0
    width 65px
    height 52px
    float left
    display inline
    background url(/template/images/buttons.png) no-repeat -79px -2660px
    border none
    cursor pointer
    
    &:hover
      background url(/template/images/buttons.png) no-repeat -79px -2713px
      
    &:active
      background url(/template/images/buttons.png) no-repeat -79px -2766px
      
  &__ul
    list-style-type none
    position absolute
    top 9px
    left 0
    z-index 60
    margin 0
    border 1px solid #e0e0de
    border-top none
    box-shadow 0 0 8px rgba(0,0,0,0.15)
    -webkit-box-shadow 0 0 8px rgba(0,0,0,0.15)
    -moz-box-shadow 0 0 8px rgba(0,0,0,0.15)
    display none
    background-color #ffffff
    font-size $middle
    width 412px
    padding 10px 9px
    box-sizing content-box
    -moz-box-sizing content-box
    -webkit-box-sizing content-box
    -khtml-box-sizing content-box
    z-index 100

