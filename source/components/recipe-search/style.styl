@import '../../styl/component-include.styl'

.i-mobile-search

  #bottom
    display none

  div.title-search-result:not(.b-recipe-search__ul1 )
    box-shadow none !important
    position static !important
    max-height none !important
    
    .title-search-result__wrapper
      height auto !important
      
  .b-recipe-search-field
    position fixed
  
  #recipe_search_list
    width auto
    
  .b-recipe-search__ul
    width 100%
    
  .b-rs__item__image-wrapper
    display none
    
  .b-rs__item__link
    padding 13px 20px 14px
    
  .b-rs__item__text
    width 70%
    padding-top 14px
    padding-bottom 14px
    
  .b-rs__item__info
    width 30%
    
  .b-rs__item__time
    margin-top 0
    
  .b-recipe-search__delete
    position absolute
    width 16px
    height 16px
    font-size 0
    background embedurl("img/delete.gif") no-repeat transparent
    cursor pointer
    top 27px
    right 27px
    //left 278px
    
#titleSearchHeaderResult.title-search-result  
  
  div&:not(.b-recipe-search__ul1 )
    box-shadow(0 20px 20px rgba( 0,0,0,.05 ))
    background-color #fff
    left 0 !important
    width 100% !important
    max-height 315px
    
#titleSearchHeaderResult .title-search-result
    
  table&:not(.b-recipe-search__ul1 )
    position static !important
    
  &__wrapper
    border-top 1px solid #ededed
    padding-left 15px
    height 315px
    
  &__block
    margin-bottom 22px
    
    &:first-child
      padding-top 25px
    
    &:last-child
      margin-bottom 0
  
  &__title
    color #484848
    font-size 7.5pt
    font-weight bold
    margin-bottom 14px
    
  &__item
    display flex
    justify-content left
    align-items center
    overflow hidden
    margin-bottom 12px
    
  &__img
    width 50px
    height 50px
    margin-right 20px
    background-position center
    background-repeat no-repeat
    background-size cover
    
  &__text
    display block
    
  &__header
    font-size 12pt
    display block
    
  &__info
    font-size 7pt
    color #484848
    display block
    margin-top -3px
    
#titleSearchHeaderResult a.title-search-result__item:hover
  text-decoration none

.b-recipe-search
  ib()
  margin -7px 0 0 38px
  z-index 4
  
  @media( max-width $screen-xs-max )
    display none
      
    .i-mobile-search &
      display block
    
  &-field
    position absolute
    background #fff
    top 60px
    left 0
    width 100%
    height 60px
    box-shadow(0 20px 20px rgba( 0,0,0,.05 ))
    z-index 10
    display none
    
    .container
      position relative
      
    .i-mobile-search &
      display block
    
    &__icon
      width 16px
      height 16px
      background embedurl( 'img/search.svg' ) no-repeat center
      background-size cover
      position absolute
      top 22px
      left 15px
      z-index 11
    
    &__clear
      display none
      width 16px
      height 16px
      background embedurl( 'img/clear.svg' ) no-repeat center
      background-size cover
      cursor pointer
      position absolute
      top 22px
      right 15px
      z-index 11
      
      &:hover
        opacity .7
        
    &__input
      margin 18px 28px 0
        
    input
      border none
      background #fff
      height 22px
      display block
      width 100%
      font-size 12pt
      
      &:focus
        outline none
  
  &.i-search-page
    margin 0
    display block
    background $header-bg
    padding 20px
    
    .b-recipe-search__form-field
      display block
      position static
    
    .b-recipe-search__input
      width 100% !important
      opacity(1)
      padding-left 12px !important
  
  &.i-open
    z-index 6

  &__form-field
    ib()
    margin-bottom 0 !important
    position absolute
    top 0
    left -40px

  .b-form-field__placeholder__text
    font-size $big-size
    color $dark-grey
    line-height 32px
    padding-top 11px
    padding-left 11px
    width 273px !important

  &__delete
    position absolute
    width 21px
    height 21px !important
    font-size 0
    background embedurl("img/delete.gif") no-repeat center transparent
    cursor pointer
    top 4px
    right 7px
    //left 279px
    margin 0 !important
    opacity 0
    transition( opacity 0.5s ease )
    
    .i-preloader &
      display none !important
      
    .i-open &
      opacity 1
  

  &__input
    width 0 !important
    height 30px !important
    font-size $base-size
    padding 0 !important
    color #fff
    display block
    line-height 30px
    background $darker-grey
    border none
    box-shadow none
    opacity(0)
    trans( all 0.5s ease )
    
    /*.i-preloader &
      background-image url("/template/images/preloader-thin.gif")
      background-position right center
      background-repeat no-repeat*/
      
    .i-open &
      opacity(1)
      width 455px !important
      padding 2px 10px 2px 38px !important
      
      @media( max-width $screen-sm-max )
        width 380px !important
  

  &__icon
    ib()
    background embedurl( 'img/search.png' ) no-repeat center center
    width 22px
    height 22px
    padding 0
    border none
    cursor pointer
    margin-top 4px
    
    .i-preloader &
      background-image url("/template/images/preloader-thin.gif")
      
    .i-mobile-search &
      opacity .5
      pointer-events none
    
  &__ul
    padding 1px
    list-style-type none
    position absolute
    top 0
    left 0
    z-index 60
    margin 0 !important
    display none
    background-color $light-grey
    font-size $middle
    width 455px
    z-index 100
    
    @media( max-width $screen-sm-max )
      width 380px

