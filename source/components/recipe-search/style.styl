#recipe_search_list
  position relative
  width 100px
  z-index 99

.b-rs

  &__heading
    margin 0 0 1px
    padding 18px 0
    font-size $large-size
    border-top 1px solid #ffffff
    border-bottom 1px solid #ffffff
    text-align center
    color $dark-grey
    font-weight bold
    background-color #fff
    
    &__num
      position relative
      display block
      
      &__content
        position absolute
        top 0
        right 10px
        display block
        font-size 8.5pt
        font-weight normal

  &__heading :first-child
    border-top none

  &__item
    padding 0
    margin-bottom 0
    background-color #fff
    
    &__link
      font-size $base-size
      padding 10px 20px 8px
      text-decoration none
      display block
      overflow hidden
      
    &__image
      display none
      
      &-wrapper
        float left
        width 50px
        height 50px
        overflow hidden
        margin-right 11px
        
        &__type_empty
          border 1px solid #e5e5e5
          
    &__text
      float left
      width 235px
      padding 17px 0 0
      display table-cell
      vertical-align middle
      line-height 1
      
      @media( max-width $screen-sm-max )
        width 170px !important
      
    &__info
      float right
      width 100px
      
    &__time
      font-size $base-size
      color $dark-grey
      display block
      text-align right
      margin 4px 0 -7px 0
      white-space nowrap
      
    &__nutrition
      font-size $base-size
      color $dark-grey
      display block
      text-align right
      margin 0
      
    &__hr
      display block
      font-size 0
      height 0
      padding 0
      margin 0
      border-bottom 1px solid $light-grey

  &__search-all
    background-color $light-grey
    border-top 1px solid #ffffff
    margin -1px 0 0
    padding 0

    &__link
      display block
      text-align center
      font-weight bold
      padding 18px 15px 17px
      font-size $middle

a.b-rs__search-all__link:hover,
.b-rs__search-all.i-hover .b-rs__search-all__link
  background-color $link-bg

a.b-rs__item__link:hover,
.b-rs__item.i-hover .b-rs__item__link
  background-color $link-bg
  color $link
  
.b-header__nav a.b-rs__item__link
  display block
  vertical-align inherit
  height auto
  line-height inherit
  margin 0
  color $link
  text-align left
  font-weight 400
  
.b-header__nav a.b-rs__search-all__link
  display block
  vertical-align inherit
  height auto
  line-height inherit
  margin 0
  color $link
  
#titleSearchHeaderResult.title-search-result:not( .b-recipe-search__ul1 )
  position fixed !important
  top 120px !important
  width 100% !important
  background #fff
  z-index 11
  display none
  
#titleSearchHeaderResult.title-search-result.b-recipe-search__ul1
  margin 0 auto !important
  
  @media (min-width: 768px)
    width 740px !important
  @media (min-width: 992px)
    width 960px !important
  @media (min-width: 1200px)
    width 1090px !important