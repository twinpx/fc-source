.b-recipe-menu
  margin 0 0 30px 0
  font-size 7pt
  padding 6px
  color #999
  
  .i-ph-animated &
    display block

  &:after
    clear both
    content "."
    display block
    height 0
    visibility hidden

  &.i-bottom
    padding-top 20px
    border-top 1px solid #dbdbdb

  &__i
    display inline-block
    vertical-align top
    text-align center
    line-height 24px
    font-size 7pt
    color #999
    margin-right 11px

  .b-favorite-button
    margin 2px 8px 0 0 !important
    display inline-block
    vertical-align middle

  &__like
    float right
    margin 8px 20px 0 20px

  &__social
    float right
    
    @media( max-width 575px )
      float none

  hr
    border 0
    height 1px
    margin 7px 0 0

  &__info
    margin 0 -10px 10px
    padding 5px 10px 10px

    &:after
      clear both
      content "."
      display block
      height 0
      visibility hidden

    .b-info-block
      width 50%
      float left
      
      @media( max-width 575px )
        float none
        width auto

.b-info-block
  font-size 9pt
  color #999
  
  @media( max-width 575px )
    margin-bottom 10px

  &:after
    clear both
    content "."
    display block
    height 0
    visibility hidden

  &__icon
    float left
    width 67px
    height 67px
    margin-right 12px
    background-repeat no-repeat
    background-position 0 0
    
  &__text
    margin-left 79px

  &__users,
  &__others
    margin-top 5px

  &__title
    padding-top 22px

  &__user
    position relative
    display inline-block
    vertical-align top
    width 20px
    height 20px
    margin-bottom 4px

    img
      position absolute
      top 0
      left 0
      -webkit-border-radius 50%
      -moz-border-radius 50%
      border-radius 50%
      transition all .2s ease
      -webkit-transition all .2s ease
      -moz-transition all .2s ease
      -ms-transition all .2s ease
      position relative

    &:hover img
      transform scale(3)
      -webkit-transform scale(3)
      -moz-transform scale(3)
      -ms-transform scale(3)
      z-index 10

  &.i-cooked &__icon
    background-position 0 0

    &:hover
      background-position 0 -68px

    &:active,
    &.i-active
      background-position 0 -135px

  &.i-like &__icon
    background-position -86px 0

    &:hover
      background-position -86px -68px

    &:active,
    &.i-active
      background-position -86px -135px

