@import '../../styl/component-include.styl'

/*Cancel placeholder.css*/
#filter_recipes
  min-height auto
  
  &.i-ph-animated
  
    .b-ph
      opacity 0
      z-index -1
      
    .b-filter-items__wrapper
      opacity 1

#recipe_feed_block.b-ph-block
  
  &.i-ph-animated
    padding-top 0
    
    @media( max-width 767px )
      height auto
    
    .b-ph-content
      position static
      width auto
      opacity 1
      
    .b-ph
      position absolute
      top 0
      left 0
      opacity 0
      z-index -1
  
#filter_lists
  display block
  
/*_Cancel placeholder.css_*/
  
#filter_recipes,
.b-filter
  margin-bottom 20px

.b-filter

  &__item
    display inline-block
    margin-right 19px
    font-size $x-small
    color $link
    
    &:nth-child(4)
      margin-right 0
      
    @media( max-width $screen-phone )
      margin-right 0
    
    &__button
      display inline-block
      vertical-align middle
      cursor pointer
      
      &:after
        content ''
        display inline-block
        vertical-align middle
        background embedurl( 'img/arrow.gif' ) no-repeat 0 0
        width 5px
        height 3px
        margin-left 7px
        
        @media( max-width $screen-phone )
          display none
    
  &__heading
    display inline-block
    vertical-align middle
    
  &__icon
  
    img
      display inline-block
      vertical-align middle
      width 24px
      height 24px
      
      &.i-active
        display none
        
    &:hover
  
      img
        display none
        
        &.i-active
          display inline-block

.b-filter__item__heading
  margin 0 4px 0 0
  color #333333
  display inline-block
  vertical-align middle
  
#filter_recipes
    
  .b-filter-items__wrapper

    @media( max-width $screen-phone )
      display flex
      justify-content space-around
      
    
#filter_lists,
.b-filter__lists
  rel()
  
#filter_list,
.b-filter__list
  background #fbfbfb
  position absolute
  top 20px
  left 0
  width 100%
  display none
  z-index 10

  .pad
    overflow hidden
    margin 16px 16px 20px

  table
    width 100%
    margin -2px 0 0 -2px
  
  td
    width 25%
  
  a,
  span
    display block
    padding 5px 25px
    font-size $small
    padding 2px 10px
    color #934b4b
    margin-left 2px
  
  a:hover
    color #d75050
    
  @media( max-width $screen-phone )
    width 100%
    left 0
    
    .pad
      margin 15px
    
    table
      margin 0
    
    td
      display block
      width auto
      background none
      
    a,
    span
      padding 0
      background none
      margin 0
      
#filter-list-cuisine,
#filter-list-dish,
#filter-list-ingredient,
#filter-list-tag
  display none
  
#filter_list.cuisine #filter-list-cuisine,
#filter_list.dish #filter-list-dish,
#filter_list.ingredient #filter-list-ingredient,
#filter_list.tag #filter-list-tag
  display block
    
#fc_statistics.i-ph-animated
  text-align center
  margin 0 0 20px
  font-family $pt-sans
  font-weight bold
  font-size 12pt
  color inherit
  
  &:after
    opacity 0
    z-index -1
    
#get_more_recipes.i-ph-animated
  text-align center
  margin 0 0 40px 0
  opacity 1
  
  a
    cursor pointer
  
  img
    display none
    
  &.preload
  
    a
      display none
    
    img
      display inline-block
      margin 3px 0 4px 0
  
#recipe_feed_block

  .preloader
    text-align center
    margin 50px 0
  
.b-recipe-feed__wrapper
  opacity 0
  transition( opacity .5 ease )
  display none
  
  &.i-animate
    opacity 1
    display block