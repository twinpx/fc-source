@import '../../styl/component-include.styl'

#title-search-mobile
  background-repeat no-repeat
  background-position center
  width 70%
  padding-top 15%
  margin 0 auto
  display block
  
  &:before
    opacity 0
    pointer-events none

#title-search-input_2
  border none
  border-bottom 1px solid #ededed
  padding-bottom 20px
  padding-left 30px
  width 100%
  font-size 12pt
  font-weight 300
  opacity 1
  
  &:focus
    outline none
    
#title-search_2
  position relative
  
  &:before
    content ''
    width 16px
    height 16px
    background embedurl( 'img/search.svg' ) no-repeat center
    background-size cover
    position absolute
    top 4px
    left 0
    z-index 11
    
  &__clear
    display none
    width 16px
    height 16px
    background embedurl( 'img/clear.svg' ) no-repeat center
    background-size cover
    cursor pointer
    position absolute
    top 4px
    right 0
    z-index 11
    
    &:hover
      opacity .7
    
#titleSearchIndexResult.title-search-result  
  
  div&:not(.b-recipe-search__ul1 )
    box-shadow(0 20px 20px rgba( 0,0,0,.05 ))
    background-color #fff
    max-height 315px
    left 0 !important
    width 100% !important
    z-index 10
    
#titleSearchIndexResult .title-search-result
    
  table&:not(.b-recipe-search__ul1 )
    position static !important
    
  &__wrapper
    border-top 1px solid #ededed
    padding-left 15px
    height 315px
    
  &__block
    margin-bottom 22px
    
    &:first-child
      padding-top 25px
    
    &:last-child
      margin-bottom 0
  
  &__title
    color #484848
    font-size 7.5pt
    font-weight bold
    margin-bottom 14px
    
  &__item
    display flex
    justify-content left
    align-items center
    overflow hidden
    margin-bottom 12px
    
  &__img
    width 50px
    height 50px
    margin-right 20px
    background-position center
    background-repeat no-repeat
    background-size cover
    
  &__text
    display block
    
  &__header
    font-size 12pt
    display block
    
  &__info
    font-size 7pt
    color #484848
    display block
    margin-top -3px
    
#titleSearchIndexResult a.title-search-result__item:hover
  text-decoration none