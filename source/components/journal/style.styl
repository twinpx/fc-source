@import '../../styl/component-include.styl'

.b-journal
  
  &__heading
    background-position center center
    background-repeat no-repeat
    height 150px
    text-align center
    rel()
    margin-bottom 24px
    
    h1
      color #fff
      font-family $pt
      font-weight bold
      font-size 22pt
      margin 0
      position absolute
      top 50%
      margin-top -20px
      width 100%
      
  h2
    font-family $pt
    font-size 22pt
    font-weight bold
    color $dark-grey
    text-align center
    margin 0 0 20px
      
  //&__feed
  
  &__item
  
    //&.i-size-L
    
    &-head
      rel()
      margin-bottom 34px
    
      &-bg
        background-color #000
      
        a
          background-repeat no-repeat
          background-size cover
          opacity( 0.5 )
          display block
          width 100%
          height 220px
      
      &-text
        color #fff
        font-family $sans
        font-weight bold
        text-align center
        position absolute
        top 23px
        left 50%
        text-align center
        width 120px
        margin-left -60px
        
        img
          border-radius( 51% )
        
        a
          font-weight bold
          font-size $x-small
          display block
          
          &,
          &:hover,
          &:focus,
          &:active
            color #fff
        
      &-title
          font-family $sans
          text-transform uppercase
          padding-bottom 33px
          
      &-author
        span
          display block
          margin-top 5px
          
      .b-ext-icon
        display block
        height 36px
        background embedurl( 'img/ext-icon.png' ) no-repeat center bottom
            
    &-body
      margin-left 20px
    
    &-title
      font-size $large-size
      font-weight bold
      color $dark-grey
      margin 0 0 18px
      line-height 1.4
    
    &-text
      margin-bottom 12px