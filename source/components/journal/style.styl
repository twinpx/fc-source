@import '../../styl/component-include.styl'

.b-journal
  
  &__heading
    background-position center center
    background-repeat no-repeat
    height 150px
    text-align center
    rel()
    margin-bottom 24px
    
    h1
      color #fff
      font-family $pt
      font-weight bold
      font-size 22pt
      margin 0
      position absolute
      top 50%
      margin-top -20px
      width 100%
      
  h2
    font-family $pt
    font-size 22pt
    font-weight bold
    color $dark-grey
    text-align center
    margin 0 0 20px
    
  h4
    font-size $large-size
    font-weight bold
    color $dark-grey
      
  &__feed
  
  &__item
  
    &.i-size-L
    
    &-head
      rel()
      margin-bottom 38px
    
      &-bg
        background-color #000
      
        a
          background-repeat no-repeat
          background-size cover
          opacity( 0.5 )
          display block
          width 100%
          height 220px
      
      &-text
        color #fff
        font-family $sans
        font-weight bold
        text-align center
        position absolute
        top 0
        left 0
        text-align center
        width 100%
        
        img
          border-radius( 51% )
        
        h3 a
          font-family $sans
          text-transform uppercase
        
        a
          font-weight bold
          font-size $x-small
          
          &,
          &:hover,
          &:focus,
          &:active
            color #fff