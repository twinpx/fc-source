@import '../../styl/component-include.styl'

.b-journal
      
  h2
    font-family $pt
    font-size 22pt
    font-weight bold
    color $dark-grey
    text-align center
    margin 0 0 20px
      
  //&__feed
  
  &__item
  
    //&.i-size-L
    
    &-head
      rel()
      margin-bottom 34px
      
      @media( max-width $screen-phone )
        margin-right -1 * $mobile-page-margin
        margin-left -1 * $mobile-page-margin
    
      &-bg
        background-color #000
      
        a
          background-repeat no-repeat
          background-size cover
          opacity( 0.5 )
          display block
          width 100%
          height 220px
      
      &-text
        color #fff
        font-family $sans
        font-weight bold
        text-align center
        position absolute
        top 23px
        left 50%
        text-align center
        width 120px
        margin-left -60px
        
        img
          border-radius( 51% )
        
        a
          font-weight bold
          font-size $x-small
          display block
          
          &,
          &:hover,
          &:focus,
          &:active
            color #fff
        
      &-title
          font-family $sans
          text-transform uppercase
          padding-bottom 33px
          
      &-author
        span
          display block
          margin-top 5px
          
      .b-ext-icon
        display block
        height 36px
        background embedurl( 'img/ext-icon.png' ) no-repeat center bottom
            
    &-body
      margin-left 20px
      max-width 730px
    
    &-title
      font-size $large-size
      font-weight bold
      color $dark-grey
      margin 0 0 18px
      line-height 1.4
    
    &-text
      margin-bottom 12px