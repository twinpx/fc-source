        tr
          td( itemprop="recipeIngredient" ) Горчица
          td 1.5 ч.л.
          
  hr
  
  div( itemprop="steps" itemscope itemtype="http://schema.org/HowToSection" )
  
    .b-recipe__step( itemprop="itemListElement" itemscope itemtype="http://schema.org/HowToStep" )
    
      -var heading = "Готовим тесто — этап 1"
      include ../../modules/heading-linethrough/include-name
      
      .row.b-recipe__ingredients
        .col-sm-4
          table
            tr
              td Нерка копченая (филе)
              td 150 г
            tr
              td Лаймы
              td 1 шт.
              
        .col-sm-4
          table
            tr
              td
                a( href="" ) Нерка копченая (филе)
              td 150 г
              
        .col-sm-4
          table
            tr
              td Нерка копченая (филе)
              td 150 г
              
      hr
              
      .row
        .col-sm-8.col-sm-offset-2
        
          .b-recipe__step-ill
            img( src="/upload/recipe/ill.jpg" alt="" itemprop="image" )
            
          hr.i-size-M
            
