@import '../../styl/component-include.styl'

.b-recipe
  
  &__chain-path
    text-align center
    font-size 8pt
    margin-bottom 15px
    vertical-align top
    
    a
      margin 0 4px
      
  &__info
    text-align center
    display flex
    justify-content space-around
    
    @media( max-width 575px )
      justify-content space-between
    
    svg
      width 24px
      height 24px
      display inline-block
      vertical-align top
      background-color #ccc
      margin-right 10px
      
      @media( max-width 575px )
        display none
    
    &-item,
    &-icon
      display inline-block
      vertical-align middle
      
    &-text
      display inline-block
      vertical-align middle
      font-size 9pt
      
  &__ill
    background-color #f4f4f4
    text-align center
    
    img
      max-width 100%
      
  .b-recipe-icons
    
    @media( max-width 767px )
      display flex
      justify-content space-around
      
  .b-recipe-icon
    
    @media( max-width 767px )
      margin 0
      
  .b-social-buttons
    text-align right
    
    @media( max-width 767px )
      text-align center
    
  &__ingredients
    
    table
      width 100%
      
      td
        border-bottom 1px solid #ededed
        padding 9px 0 9px 12px
        
        @media( max-width 767px )
          padding 2px 0 2px 12px
      
        &:nth-child(2)
          text-align right