@import '../../styl/component-include.styl'

#html_code
  font-size 8pt
  background #990000
  color #ffffff
  border-radius 2px
  display inline-block
  vertical-align middle
  padding 2px 5px
  text-decoration none
  font-family Arial, Helvetica, sans-serif
  margin-left 10px
  
.recipe h1
  font-size 18pt

.recipe .stage
  margin-bottom 20px
  
.recipe .needed
  margin 0 0 30px 0
  
.recipe .title .needed h2
  font-size 14pt
  color #999999
  margin-bottom 10px
  
.recipe .tools
  overflow hidden
  
.recipe .tools .item
  display inline-block
  width 205px
  margin 0 11px 15px 0
  vertical-align bottom
  
.recipe .tools .item img,
.recipe .tools .item span.p
  vertical-align middle
  
.recipe .tools .item span.p
  font-family Georgia, "Times New Roman", Times, serif
  font-size 9pt
  display inline-block
  width 95px
  
.recipe .needed table
  width 100%
  border-top 1px solid #ebebeb
  margin-top 8px
  
.recipe .needed table td
  border-bottom 1px solid #ebebeb
  font-size 8pt
  vertical-align middle
  
.recipe .needed table td.ing_name
  padding 5px 13px
  width 30%
  
.recipe .needed table td.ing_amount
  padding 5px 13px 5px 0
  width 10%
  
.recipe .needed table td.ing_buy
  padding 5px 13px 5px 0
  width 10%
  
.recipe .needed table td.border
  border-left 1px solid #ebebeb
  
.recipe .image
  width 600px
  margin 0 0 30px 0
  
.recipe .image .screen
  position relative
  
.recipe .image .screen div
  position absolute
  top 0
  left 0
  background url( '/images/spacer.gif' ) no-repeat 0 0
  
.recipe .description,
.recipe .instruction
  width 540px
  
.recipe .description
  margin-bottom 20px
  
.recipe .bar
  width 670px
  height 46px
  margin-bottom 20px
  margin-left 0
  
.scales
  font-size 8pt
  color #999999
  
.scales img
  margin-left 11px
  cursor pointer
  
.recipe .needed .scales
  text-align right
  padding-right 3px
  
.recipe .needed .scales a
  display inline-block
  width 12px
  height 12px
  background url( '/images/icons.png' ) no-repeat right -325px

.recipe_info
  margin 0 0 28px 0
  
.recipe_info table
  width 100%
  border-top 1px solid #ebebeb
  
.recipe_info td
  border-bottom 1px solid #ebebeb
  font-size 8pt
  vertical-align middle
  
.recipe_info td.time
  padding 5px 13px
  width 42%
  
.recipe_info td.yield
  padding 5px 13px 5px 0
  width 16%
  
.recipe_info td.nutrition
  padding 5px 13px 5px 0
  width 42%
  text-align right
  
.recipe_info span
  color #999999

.recipe .date, .topic_item .date
  //color #999999
  margin 0 0 8px 0
  font-size 8pt
  
.topic_item .date
  margin-left 30px
  
.recipe .date .time,
.topic_item .date .time
  margin-left 10px

.stage .photo
  padding-bottom 10px
  margin-bottom -10px
  background url( '/images/progress.gif' ) repeat-x 0 bottom
  
.stage .photo.i-no-progress
  padding-bottom 0
  margin-bottom 0
  background none

div.border
  margin 15px 0 25px 0
  border-top 1px solid #cccccc
  
.admin_panel
  float right
  margin 8px 12px 0 0
  
.bar
	font-size 8pt
	margin 0 0 0 30px
  
.bar *
  font-size 8pt
  
#body .bar .padding
	padding 0 0 0 0
	height 43px
  
.bar a,
.bar span
  font-size 8pt
  
.bar .author
	float left
	margin 14px 40px 0 0

.bar .comments
	position relative
	float left
	margin 11px 40px 0 0
	padding-bottom 1px
	color #999999
  
.bar .comments .icon
  display none
  
.bar .comments .add
	display inline-block
	background embedurl( 'img/comment.png' ) no-repeat 0 center
	padding 3px 0 5px 33px
  
.bar .comments
  vertical-align middle
  
.bar .comments .number
	display inline-block
	padding 3px 0 5px 3px
	vertical-align middle

.bar .yashare-auto-init
	float left
	margin 8px 40px 0 0
	padding-bottom 1px
  
.bar .date
	float right
	margin 14px 0 0 50px
  
.bar .date span
	margin-left 10px
	color #999999