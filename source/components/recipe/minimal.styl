.b-recipe

  .b-recipe-icons
    visibility hidden
    height 27px
    
  
  &__chain-path
    text-align center
    font-size 8pt
    margin-bottom 36px
    vertical-align top
    
    @media( max-width 575px )
      margin-bottom 20px
    
    a
      margin 0 4px
      
  &__author
    position relative
    
    @media( max-width 767px )
      text-align left
      width 50%
      float left
    
    .b-author-avatar
      position absolute
      top 0
      left 0
      
      @media( max-width 767px )
        position relative
        top auto
        left auto
        display inline-block
        margin-top 17px
        margin-bottom 10px
      
  &__company
    position relative
    
    @media( max-width 767px )
      text-align right
      width 50%
      float left
    
    a
      position absolute
      top -24px
      right 0
      text-align center
      
      &:hover
        text-decoration none
      
      @media( max-width 767px )
        position relative
        top auto
        right auto
        display inline-block
        margin-bottom 10px
      
    i
      font-size 6pt
      font-style normal
      color #999
      white-space nowrap
      display block
      
  &__info
    text-align center
    display flex
    justify-content space-around
    margin 0 20%
    
    @media( max-width 767px )
      justify-content space-between
      margin 0
      clear both
    
    img,
    svg
      width 24px
      height 24px
      display inline-block
      vertical-align top
      
      @media( max-width 575px )
        display none
        
    &-icon
      margin-right 10px
    
    &-item,
    &-icon
      display inline-block
      vertical-align middle
      
    &-text
      display inline-block
      vertical-align middle
      font-size 9pt
      
  &__intro
    display flex
      
    &-ill
      width 100%
      
    &-aside
      width 33.33%
      padding-left 30px
      
  &__ill,
  &__step-ill
    background url( '/template/images/preloader-grey.gif' ) no-repeat center #f9f9f9
    text-align center
    position relative
    min-height 150px
    
    img
      max-width 100%
      display block
      margin 0 auto
      
    &:after
      content ''
      display block
      position absolute
      top 0
      left 0
      width 100%
      height 100%
      z-index 10