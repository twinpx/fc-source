@import '../../styl/component-include.styl'
.b-recipe

  .b-recipe-icons
    visibility hidden
    height 27px
    
  
  &__chain-path
    text-align center
    font-size 8pt
    margin-bottom 36px
    vertical-align top
    
    @media( max-width 575px )
      margin-bottom 20px
    
    a
      margin 0 4px
      
  &__author
    position relative
    
    @media( max-width 767px )
      text-align left
      width 50%
      float left
    
    .b-author-avatar
      position absolute
      top 0
      left 0
      
      @media( max-width 767px )
        position relative
        top auto
        left auto
        display inline-block
        margin-top 17px
        margin-bottom 10px
      
  &__company
    position relative
    
    @media( max-width 767px )
      text-align right
      width 50%
      float left
    
    a
      position absolute
      top -24px
      right 0
      text-align center
      
      &:hover
        text-decoration none
      
      @media( max-width 767px )
        position relative
        top auto
        right auto
        display inline-block
        margin-bottom 10px
      
    i
      font-size 6pt
      font-style normal
      color #999
      white-space nowrap
      display block
      
  &__info
    text-align center
    display flex
    justify-content space-around
    margin 0 20%
    
    @media( max-width 767px )
      justify-content space-between
      margin 0
      clear both
    
    img,
    svg
      width 24px
      height 24px
      display inline-block
      vertical-align top
      
      @media( max-width 575px )
        display none
        
    &-icon
      margin-right 10px
    
    &-item
      height 26px
      
    &-item,
    &-icon
      display inline-block
      vertical-align middle
      
    &-text
      display inline-block
      vertical-align middle
      font-size 9pt
      
  &__intro
    display flex
      
    &-ill
      width 100%
      
    &-aside
      width 33.33%
      padding-left 30px
      
  &__ill,
  &__step-ill
    background url( '/template/images/preloader-grey.gif' ) no-repeat center #f9f9f9
    text-align center
    position relative
    min-height 150px
    
    img
      max-width 100%
      display block
      margin 0 auto
      
    &:after
      content ''
      display block
      position absolute
      top 0
      left 0
      width 100%
      height 100%
      z-index 10

  //yt button
  &__yt-button-block
    position absolute
    bottom 30px
    left 0
    width 100%
    z-index 11
  
  &__yt-button
    position absolute
    bottom 30px
    left 50%
    width 270px
    margin-left -135px
    height 60px
    background-color rgba(0,0,0,.7)
    color #fff
    padding 10px 25px 10px 12px
    font-size 11pt
    font-family $sans
    font-weight 200
    border-radius 30px
    display flex
    align-items center
    justify-content space-between
    cursor pointer
    z-index 11
    
    span
      white-space nowrap
      
    .i-mobile
      display none
    
  &__yt-icon
    width 60px
    height 40px
    background-repeat no-repeat
    background-position center
    background-size contain
    
  @media( max-width 500px )
    
    &__yt-button
      width 150px
      margin-left -75px
      font-size 7pt
      font-weight bold
      padding 4px 15px 5px 7px
      height 40px
      bottom 20px
  
      .i-desktop
        display none
        
      .i-mobile
        display inline-block
      
    &__yt-icon
      width 50px
      height 30px