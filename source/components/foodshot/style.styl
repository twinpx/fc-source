@import '../../styl/component-include.styl'

.b-foodshot
  display block

  &__grid
    margin 0 -15px
  
  &__sizer
    width 33.33%
    
  &__item
    width calc(33.33% - 15px)
    padding 0 0 40px 15px
    background #fff
    //    ?     background url("/template/images/preloader-grey.gif") no-repeat center #f9f9f9
    
    &-img
      overflow hidden
      border-radius 15px
      margin-bottom 25px
      min-height 100px
      background-repeat no-repeat
      background-position center
      background-color #eee
      background-size cover
      
      img
        display none
      
    a
      display block
      text-align center
    
  @media( max-width 767px )
  
    &__grid
      margin 0
    
    &__sizer
      width 100%
      
    &__item
      width 100%
      padding 0 0 40px
    
  @media ( min-width 768px ) and ( max-width 1024px )
    
    &__sizer
      width 50%
      
    &__item
      width calc(50% - 15px)
      
#get_more_foodshots
  text-align center
  margin 0 0 40px 0
  
  a
    cursor pointer
    
  img,
  &.preload a
    display none
    
  &.preload img
    display inline-block
    margin 3px 0 4px 0