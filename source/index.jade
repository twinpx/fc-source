block var-page
  - var page = 'index'

extends ./layouts/main.jade

block title
  title Main page | food
  
block profile-buttons

  .b-header__buttons.hidden-xs
    a.btn.btn-danger.b-header__auth-button( href="#" data-toggle="modal" data-target="#authModal" ) Войти
    
  include ./modules/modals/auth
  include ./modules/modals/email
  
      
  .b-header__nav
    .row
      .col-xs-6
        include ./components/recipe-search/template
        include ./modules/search-helper/include.jade
        a( href="/recipes/" ) Рецепты
        a.i-active( href="/journal/" ) Журнал
        a( href="/foodshot/" ) Фудшот
        a( href="/lavka/" ) Лавка
      .col-xs-6.visible-xs-block
        a( href="#" data-toggle="modal" data-target="#authModal" ) Войти
        a( href="/forms/reg/" ) Зарегистрироваться

block content
  
  .container
      
    -var heading = "Foodclub.ru — кулинарное сообщество"
    include ./modules/heading-linethrough/h1
    
    hr
    
    include ./components/recipe-search-index/template
    
    hr.i-size-L
    
    include ./modules/index-brief/include
    
    hr.i-size-L
    
    .b-recipe-line.i-index

      -var heading = "Последняя рекомендация"
      include ./modules/heading-linethrough/include
      
      hr.i-size-L
      
      .row
        -var n = 0
          while n < 3
            -n++
            .col-sm-4
              include ./modules/recipe-thumb/journal-item-short.jade
            hr.i-size-L.visible-xs-block
    
    hr.i-size-L
    
  //-include ./components/recipe-search-index/search-result