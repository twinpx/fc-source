@import '../../../styl/component-include.styl'

.b-recipe-thumb
  text-align center
  rel()
  
  &__photo
    display block
    background-repeat no-repeat
    background-size cover
    background-position center center
    background-color #f2f2f2
    margin-bottom 18px
    border-radius 15px
    
    img
      width 100%
      height auto
      border-radius 15px

  &__author
    position absolute
    top -12px
    right -12px
    border-radius 51%
    overflow hidden
    display block
    width 32px
    height 32px
    z-index 2
    
    img
      width 100%
      height 100%
    
  &__name
    font-size 11pt
    font-family $pt-sans
    line-height 1.3
    
  b
    display block
    font-size 9pt
    font-family $pt-sans
    font-weight normal
    line-height 1.3
    
  &__marker
    background embedurl( 'img/rotm-label.svg' ) no-repeat 0 0
    width 90px
    height 90px
    position absolute
    top -3px
    left -3px