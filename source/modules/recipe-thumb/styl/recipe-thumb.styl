@import '../../../styl/component-include.styl'

.b-recipe-thumb
  text-align center
  rel()
  
  &__photo
    display block
    background-repeat no-repeat
    background-size cover
    background-position center center
    margin-bottom 18px
    
    img
      width 100%
      height auto

  &__author
    position absolute
    top -12px
    right -12px
    border-radius 51%
    overflow hidden
    display block
    width 32px
    height 32px
    z-index 2
    
    img
      width 100%
      height 100%
    
  &__name
    font-size 13.5pt
    font-weight bold
    margin-bottom 6px
    font-family $pt-sans
    line-height 1.3
    
  &__time,
  &__nutrition
    font-size 9pt
    margin-bottom 1px
    font-family $pt-sans
    line-height 1.3
    
  &__servings
    font-size 9pt
    margin-bottom 1px
    font-family $pt-sans
    line-height 1.3
    
  &__marker
    background embedurl( 'img/rotm-label.svg' ) no-repeat 0 0
    width 90px
    height 90px
    position absolute
    top -3px
    left -3px