.b-recipes-list
  margin-right -42px

.b-recipes-list__item
  float left
  display inline
  width 188px
  height 230px
  margin 0 42px 25px 0
  //margin-right 36px
  
.b-recipe-preview__photo
  display block
  background #ffffff
  border 1px solid #e3e3e1
  box-shadow 0 0 3px #c8c8c8
  -webkit-box-shadow 0 0 3px #c8c8c8
  -moz-box-shadow 0 0 3px #c8c8c8
  text-align center
  margin-bottom 9px
  padding 8px
.b-recipe-preview__heading
  font-style normal
  font-size 9pt
  font-family Georgia, "Times New Roman", Times, serif
  margin 0 0 10px 10px
.b-recipe-preview__author
  margin 0 0 9px 10px
  font-size 7pt
  color #999

.b-recipe-preview__photo__link
  display inline-block
  vertical-align top
  width 170px
  height 113px
  overflow hidden

.b-recipe-preview__info
  margin 0 0 0 10px

.b-recipe-preview__comments-icon
  font-size 8pt
  display inline-block

.b-recipe-preview
  .b-favorite-button
    position absolute
    top 30px
    left 0

.b-comments-preview
  font-size 8pt

.b-comments-preview__icon
  width 26px
  height 16px
  background embedurl( 'img/comment.png' ) no-repeat 0 0
  display inline-block
  vertical-align top

a
  &:hover
    .b-comments-preview__icon
      background-image embedurl( 'img/comment-hover.png' )
  &:active
    .b-comments-preview__icon
      background-image embedurl( 'img/comment-active.png' )

.b-comments-preview__num
  display inline-block
  vertical-align top
  margin-top 2px

