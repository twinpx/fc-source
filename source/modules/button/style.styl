@import '../../styl/component-include.styl'

//bootstrap button
.btn,
.btn-default

  &,
  a&
    background-color #6cc184
    font-size 8pt
    font-family $sans
    color #fff
    line-height 30px
    padding 0 20px
    border none
    
    &:hover,
    &:focus,
    &:active,
    &:active:focus
      background-color #6cc184
      outline none
      box-shadow none
      color #fff
      opacity .7
      
  &.btn-gray

    &,
    a&
    
      &,
      &:hover,
      &:focus,
      &:active,
      &:active:focus
        background-color #e7e7e7
        color #333333
        
  &.btn-lg
    font-size 10.5pt
    line-height 48px

div.button, button.button, input.button, .b-button, #authorization .bx-auth-service-form input.button
  height 41px
  background url("data:image/gif;base64,R0lGODlhAQApAMQAANra2tbW1uLi4uDg4NPT09jY2OXl5d3d3dDQ0N7e3tvb2+Tk5NTU1OHh4ejo6NXV1dLS0t/f39zc3NnZ2ebm5uPj49fX19HR0efn5wAAAAAAAAAAAAAAAAAAAAAAAAAAACH5BAAAAAAALAAAAAABACkAAAUgoONgJEUZy1JVQtMMUZQckqQA01RYVvA8DAYBArkYESEAOw==") repeat-x 0 0
  font-size 11pt
  color #7d7c7c
  text-shadow 0 1px 0 #ffffff
  cursor pointer
  text-align center
  margin-top 15px
  padding 0 27px
  -moz-border-radius 5px
  -webkit-border-radius 5px
  -khtml-border-radius 5px
  border-radius 5px
  box-sizing content-box
  -moz-box-sizing content-box
  -webkit-box-sizing content-box
  -khtml-box-sizing content-box
  border none
  border-bottom 1px solid #c1c1c1
  vertical-align top
  line-height 41px

#authorization
  .bx-auth-service-form
    input
      &.button
        padding-top 0

input.button,
input.b-button
  padding-top 0
  height 41px

div.button_hover, button.button_hover, input.button_hover, .b-button__action-hover, .b-button:hover, #authorization .bx-auth-service-form input.button_hover
  background-image url("data:image/gif;base64,")
  color #666666
  border-color #a3a3a3

div.button_active, button.button_active, input.button_active, .b-button__action-active, .b-button:active, #authorization .bx-auth-service-form input.button_active
  background-image url("data:image/gif;base64,")
  color #666666
  border-bottom none
  border-top 1px solid #a3a3a3

div.button.i-processing, button.button.i-processing, input.button.i-processing, .b-button.i-processing,
div.button_hover.i-processing, button.button_hover.i-processing, input.button_hover.i-processing, .b-button:hover.i-processing,
div.button_active.i-processing, button.button_active.i-processing, input.button_active.i-processing, .b-button:active.i-processing
  color #999
  opacity 0.75
  -moz-opacity 0.75

.b-button__type_2
  font-family Georgia, "Times New Roman", Times, serif
  font-style italic
  font-size 7.5pt
  display inline-block
  vertical-align top
  padding 3px 7px
  -moz-border-radius 2px
  -webkit-border-radius 2px
  -khtml-border-radius 2px
  border-radius 2px
  margin-left 1px
  background url(/images/buttons.png) no-repeat 0 -1662px
  color #ffffff

a
  &.b-button__type_2
    &:hover
      background url(/images/buttons.png) no-repeat 0 -1682px
      color #ffffff
      
.b-button__width_100
  width 100%
  padding-right 0 !important
  /*important for the old styles, can be removed then*/
  padding-left 0 !important
  
.b-button__size_S
  font-size 8pt
  font-weight normal
  color #6a6a6a
  text-shadow 0 1px 0 #fff
  height 26px
  text-align center
