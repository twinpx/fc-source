@import '../../styl/component-include.styl'

//background: embedurl( 'img/blank.gif' );
  
  
#top_spacer
  height 54px
  
#top_panel
  height 54px
  background url("data:image/png;base64,") repeat-x 0 0
  color #ffffff
  text-shadow 0 -1px 0 #333333
  font-family Georgia, "Times New Roman", Times, serif
  font-size 9pt
  box-shadow 0 0 4px #333333
  -webkit-box-shadow 0 0 4px #333333
  -moz-box-shadow 0 0 4px #333333
  position fixed
  width 100%
  z-index 100
  
  a
    color #ffffff
    
    &:hover
      color #cecece
  
  .body
    width 960px
    margin 0 auto
    
  .person
    position relative
    float left
    display inline
    margin 12px 17px 0 8px
    vertical-align middle
    
    a
      display inline-block
      
      &.user
        padding 1px 0 2px 0
        margin-right 22px
        text-decoration none
        
        img
          vertical-align middle
          margin-right 9px
    
    .sign_out
      position absolute
      top -4px
      left -8px
      font-size 0
      width 11px
      height 11px
      display block
      background embedurl('img/sign-out.gif') no-repeat 0 0
      
    .rating
      padding 0 0 0 23px
      background embedurl('img/rating.gif') no-repeat 0 0
      
    .status
      margin-left 10px
      width 120px
      display inline-block
      
  .menu
    float right
    display inline
    margin 20px 21px 0 0
    
    .fav
      float left
      display inline
      padding-left 24px
      background embedurl('img/fav.gif') no-repeat 0 0
      margin-right 38px
      
    .kitchen
      float left
      display inline
      position relative
      
      a
        float left
        display inline
        padding-left 24px
        background embedurl('img/kitchen.gif') no-repeat 0 0
        white-space nowrap
        text-decoration none
        
        span
          display inline-block
          background embedurl('img/down.gif') no-repeat right 0
          padding 0 20px 0 0
          height 16px
          
          span
            background none
            padding 0
          
        .up
          background embedurl('img/up.gif') no-repeat right 0
          
      .submenu
        position absolute
        top 35px
        left -37px
        background #f3f3f3
        font-size 9pt
        width 186px
        box-shadow( 1px 1px 4px #999999 )
        display none
        z-index 60
        
        a
          display inline-block
          background none
          border-top 1px solid #ffffff
          border-bottom 1px solid #dbdbdb
          text-shadow none
          color #af3e3e
          width 160px
          text-align center
          padding 8px 0 10px 0
          margin 0 13px
          
          &:hover
            color #c67878
            
          &.first
            border-top none
            padding-top 10px
            
          &.last
            border-bottom none
            padding-bottom 12px
          
      .submenu_pointer
        display inline-block
        width 12px
        height 6px
        background embedurl('img/pointer1.gif') no-repeat  0 0
        position absolute
        top -6px
        left 87px
        
    .subscription
      display inline-block
      background embedurl('img/subscription.gif') no-repeat 0 1px
      padding 0 0 2px 19px
      
  .add
    margin 15px 100px 0 0
    float right
    
    .button
      display inline-block
      width 79px
      height 25px
      background embedurl('img/button.gif') no-repeat 0 0
      text-shadow 0 -1px 0 #194b07
      text-align center
      text-decoration none
      
      &:hover
        color #b3e498
        
      span
        display inline-block
        padding 5px 0 0 0
        
    .submenu
      position relative
      display block
      width 10px
      height 0
      font-size 0
      
      .body
        position absolute
        top 39px
        left -55px
        width 191px
        background #449722
        font-size 9pt
        box-shadow( 1px 1px 4px #999999 )
        display none
        z-index 60
        
      .pointer
        display inline-block
        width 12px
        height 6px
        background embedurl('img/pointer2.gif') no-repeat 0 0
        position absolute
        top -6px
        left 90px
        
      a
        display inline-block
        border-top 1px solid #489c23
        border-bottom 1px solid #367a14
        text-shadow none
        color #ffffff
        width 165px
        text-align center
        padding 8px 0 10px 0
        margin 0 13px
        
        &:hover
          color #b3e498
          
        &.first
          border-top none
          padding-top 10px
          
        &.last
          border-bottom none
          padding-bottom 12px

  .sign_in
    display inline-block
    margin-top 20px
    
  .reg
    display inline-block
    margin 20px 0 0 20px
    