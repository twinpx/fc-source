@import '../../styl/component-include.styl'

.b-content-nav
  border-bottom 1px solid #e6e6e6
  padding floor( $grid-gutter-width ) 0
  font-size 9pt
  text-align center
  margin-bottom floor( $grid-gutter-width )
  
  .container
  
    @media( max-width $screen-tablet - 1 )
      display none
  
  nav
    margin 0
    padding 0

  a,
  span
    margin 0 15px
    white-space nowrap

    &.i-emphasise
      color #389a0d
      
  @media( max-width $screen-tablet - 1 )
    padding 0
    
    a,
    span
      display block
      text-align center
      margin-bottom 15px

  .b-mobile-menu-icon
    height 57px
    background embedurl( 'img/menu-icon.gif' ) no-repeat center center
    cursor pointer
    
  &.i-open
    
    .hidden-xs
      display block !important
      