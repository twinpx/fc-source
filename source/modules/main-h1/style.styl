@import '../../styl/component-include.styl'

nav.b-h1-tags
  justify-content left
  font-family $pt-sans
  flex-wrap wrap

  &.i-ph-animated
    display flex
  
    @media( max-width 767px )
      display block
    
  a
    margin-right 20px
  
    @media( max-width 991px )
      display none
        
      &:nth-of-type(1),
      &:nth-of-type(2),
      &:nth-of-type(3)
        display inline
    
        @media( max-width 767px )
          display block
          text-align center
          margin-right 0