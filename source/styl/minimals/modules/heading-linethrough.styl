.b-heading-linethrough
  background embedurl( 'img/bg.gif' ) repeat-x center
  margin 30px 0
  display flex
  align-items center
  justify-content center
  
  @media( max-width 575px )
    margin 20px 0
  
  h2,
  h1
    display inline-block
    background-color #fff
    margin 0 !important
    padding 0 13px
      
    a
      &,
      &:hover,
      &:focus
        color $dark-grey