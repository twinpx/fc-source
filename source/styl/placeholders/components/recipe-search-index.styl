#title-search-input_2
  height 43px
  border none
  transition( opacity .5s ease )
  opacity 0

#title-search-mobile
  width 70%
  padding-top 15%
  margin 0 auto
  position relative
  
  &:before
    content ''
    background-color $placeholder-color
    position absolute
    top 0
    left 0
    width 100%
    height 100%
    transition( opacity .5s ease )
    z-index 1