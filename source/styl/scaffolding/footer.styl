.b-footer
  display block
  background $m-light-grey
  font-family $sans
  font-size $small
  color $dark-grey
  position absolute
  bottom 0
  left 0
  width 100%

  h4
    font-weight bold
    margin 0 20px 10px 0
    font-size $small
  
  menu
    list-style-type none
    font-size $small
    
    li
      padding-bottom 9px
      
      span
        color $lighter-grey

#bottom
  padding 40px 0 10px 0
  
  @media( max-width $screen-tablet )
    padding-bottom 40px