.b-header
  background $header-bg
  min-height 60px
  rel()
  
  .dropdown-menu > li > a
    color #fff
    
    &:focus,
    &:hover
      background-color transparent
      opacity 0.7
  
  .i-mobile-search &
    position fixed
    width 100%
    top 0
    left 0
    z-index 994
  
  body & a
  
    &
      color #fff
      
    &:hover
      color #fff
      opacity 0.7
      text-decoration none
      
  .b-mobile-menu-icon
    cursor pointer
    width 32px
    height 32px
    background embedurl( 'img/header-menu-icon.gif' ) no-repeat center center
    position absolute
    top 15px
    right 92px
    z-index 2
      
  .b-mobile-search-icon
    cursor pointer
    width 32px
    height 32px
    background embedurl( 'img/search.png' ) no-repeat center center
    position absolute
    top 15px
    right 32px
    z-index 2
    
    .i-mobile-search &
      opacity .5
      pointer-events none
    
  .col-xs-6
    position static
      
  &__logo
    float left
    padding-top 17px
        
    @media( max-width $screen-xs-max )
      float none
      display block
      width 128px
      
  &__nav
    margin 0 150px
    padding-top 22px
    text-align center
    font-weight 300
    
    // bitrix composite
    .row:last-child .col-xs-6:first-child > div:first-child
      display inline-block
    
    a
      ib()
      height 16px
      line-height 16px
      margin 0 17px
      
      &.i-active
        color #b7b7b7
        
      @media( max-width $screen-sm-max )
        margin 0 11px
        
    [ id^=bx_incl_area ]
      display inline-block
      
    .btn-default
      max-width 150px
    
    @media( min-width $screen-tablet )
    
      .row
        margin 0
    
      .col-xs-6
        float none
        width auto
        padding 0
        
    @media( max-width $screen-xs-max )
      display none
      text-align left
      margin 0
      font-size $middle
      padding-top 40px
      
      a
        display block
        margin 0 0 30px
        height auto
      
  &-helper
    ib()
    background embedurl( 'img/helper.png' ) no-repeat 0 0
    width 16px
    height 16px
      
  &-search
    ib()
    background embedurl( 'img/search.png' ) no-repeat 0 0
    width 16px
    height 16px
    
  &__buttons
    float right
    width 150px
    padding-top 15px
    
  &__add-button,
  &__auth-button
    float right
      
  &__profile-button
    padding 0
    width 30px
    height 30px
    rel()
    float right
    margin-left 14px
    
    &:after
      content ' '
      display block
      position absolute
      bottom 2px
      right 2px
      margin-left -2px
      width 5px
      height 5px
      background embedurl( 'img/profile-pointer.gif' ) no-repeat 0 0
      z-index 5
    
  &__profile
    rel()
    
    .dropdown-menu&-list
      display none
      position absolute
      top 38px
      right -7px
      background #3c3c3c
      padding 18px 20px
      margin 0
      border-radius( 3px )
      list-style-type none
      box-sizing( border-box )
      width 200px
      z-index 10
      
      .open &
        display block
      
      li
        height 30px
        
      a,
      span
        line-height 30px
        font-size 9pt
        
      a:hover,        
      span
        color #bdbdbd
        
  for icon in 'profile' 'favorite' 'recipes' 'articles' 'subscribe' 'kitchen' 'signout' 
    .i-{icon}
      background embedurl( 'img/'+icon+'.png' ) no-repeat 5px center
      padding-left 40px
          
.b-page-heading

  &__ill
    background-position 0 0
    background-repeat repeat
    height 150px
    text-align center
    rel()
    
    .modal-open &
      margin-right -17px
    
    h1
      color #fff
      font-family $pt
      font-weight bold
      font-size 22pt
      margin 0
      position absolute
      top 50%
      margin-top -28px
      width 100%
      
      .modal-open &
        padding-right 17px